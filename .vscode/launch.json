{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DBAT: Portal",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/portal.py",
            "console": "integratedTerminal"
        },
        {
            "name": "DBAT: Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal"
        },
        {
            "name": "DBAT: (GDB) Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:python.interpreterPath}",
            "args": ["server.py"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "setPythonPath" // This is optional, see below
        },
        {
            "name": "DBAT: (GDB) Migrate",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:python.interpreterPath}",
            "args": ["migrate.py"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "setPythonPath" // This is optional, see below
        },
        {
            "name": "(GDB) Attach to Python",
            "type": "cppdbg",
            "request": "attach",
            "program": "${command:python.interpreterPath}", // Specify the path to the venv Python interpreter
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}